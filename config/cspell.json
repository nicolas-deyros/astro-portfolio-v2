{
	"$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
	"version": "0.2",
	"language": "en",
	"languageSettings": [
		{
			"languageId": "astro",
			"locale": "en",
			"dictionaries": ["typescript", "node", "html", "css", "fonts"]
		},
		{
			"languageId": "typescript",
			"locale": "en",
			"dictionaries": ["typescript", "node", "npm"]
		},
		{
			"languageId": "javascript",
			"locale": "en",
			"dictionaries": ["javascript", "node", "npm"]
		},
		{
			"languageId": "markdown",
			"locale": "en",
			"dictionaries": ["markdown", "typescript", "node"]
		}
	],
	"dictionaries": [
		"typescript",
		"node",
		"npm",
		"html",
		"css",
		"fonts",
		"markdown",
		"javascript",
		"astro-portfolio-custom"
	],
	"dictionaryDefinitions": [
		{
			"name": "astro-portfolio-custom",
			"path": "./cspell-custom-dictionary.txt",
			"addWords": true
		}
	],
	"ignorePaths": [
		"node_modules/**",
		"**/node_modules/**",
		"dist/**",
		"**/dist/**",
		".astro/**",
		"coverage/**",
		"*.log",
		"package-lock.json",
		"pnpm-lock.yaml",
		"yarn.lock",
		".git/**",
		".vscode/**",
		".github/**",
		"public/favicon.svg",
		"src/assets/**/*.svg",
		"test/**/*.snap",
		".agent/**",
		".agents/**",
		".claude/**"
	],
	"ignoreRegExpList": [
		"\\b[A-Z]{2,}\\b",
		"\\b\\d+\\b",
		"\\bhttps?://\\S+\\b",
		"\\b[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}\\b",
		"\\b[a-f0-9]{40}\\b",
		"\\b[a-zA-Z0-9+/=]{20,}\\b",
		"className\\s*=\\s*['\"][^'\"]*['\"]",
		"src\\s*=\\s*['\"][^'\"]*['\"]",
		"href\\s*=\\s*['\"][^'\"]*['\"]"
	],
	"words": [
		"astro",
		"astrojs",
		"tailwindcss",
		"mdx",
		"frontmatter",
		"vitest",
		"jsdom",
		"puppeteer",
		"resend",
		"formik",
		"vercel",
		"partytown",
		"iconify",
		"gtag",
		"dataLayer",
		"typeof",
		"readonly",
		"keyof",
		"instanceof",
		"const",
		"async",
		"await",
		"eval",
		"querySelector",
		"addEventListener",
		"preventDefault",
		"localStorage",
		"sessionStorage",
		"innerHTML",
		"textContent",
		"classname",
		"onclick",
		"onload",
		"onchange",
		"onsubmit",
		"dataset",
		"setAttribute",
		"getAttribute",
		"appendChild",
		"createElement",
		"getElementById",
		"getElementsByClassName",
		"querySelectorAll",
		"endianness",
		"typeof",
		"instanceof",
		"console",
		"process",
		"env",
		"require",
		"module",
		"exports",
		"dirname",
		"filename",
		"substr",
		"substring",
		"toLowerCase",
		"toUpperCase",
		"toString",
		"parseInt",
		"parseFloat",
		"JSON",
		"stringify",
		"parse",
		"Array",
		"Object",
		"String",
		"Number",
		"Boolean",
		"Date",
		"RegExp",
		"Promise",
		"Error",
		"TypeError",
		"ReferenceError",
		"SyntaxError",
		"RangeError",
		"EvalError",
		"URIError"
	],
	"flagWords": ["hte", "teh", "adn", "nda"],
	"caseSensitive": false,
	"allowCompoundWords": true,
	"minWordLength": 3,
	"maxNumberOfProblems": 100,
	"numSuggestions": 5
}
