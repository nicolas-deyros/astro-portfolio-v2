{
  "trailingComma": "all",
  "useTabs": true,
  "tabWidth": 2,
  "semi": false,
  "singleQuote": true,
  "bracketSpacing": true,
  "bracketSameLine": true,
  "arrowParens": "avoid",
  "endOfLine": "auto",
  "htmlWhitespaceSensitivity": "ignore",
  "plugins": ["prettier-plugin-astro", "prettier-plugin-tailwindcss"],
  "overrides": [
    {
      "files": [
        ".*",
        "*.json",
        "*.md",
        "*.mdx",
        "*.toml",
        "*.yml",
        "*.jsx",
        "*.tsx",
        "*.ts",
        "*.js, *.astro"
      ],
      "options": {
        "parser": "astro"
      }
    }
  ]
}
