{
	"name": "portfolio",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"// === Development ===": "",
		"dev": "astro dev --open",
		"dev:clean": "astro dev --port 4321",
		"build": "astro build --remote",
		"preview": "astro preview",
		"astro": "astro",
		"// === Code Quality ===": "",
		"lint": "eslint . --ext .js,.ts,.astro,.jsx,.tsx --fix",
		"lint:text": "textlint \"src/content/**/*.{md,mdx}\" \"README.md\" \"*.md\"",
		"lint:text:fix": "textlint --fix \"src/content/**/*.{md,mdx}\" \"README.md\" \"*.md\"",
		"lint:spell": "cspell \"**/*.{ts,js,astro,tsx,jsx,md,mdx}\" --no-progress",
		"lint:spell:fix": "cspell \"**/*.{ts,js,astro,tsx,jsx,md,mdx}\" --no-progress --show-suggestions",
		"lint:all": "npm run lint && npm run lint:text:fix && npm run lint:text && npm run lint:spell",
		"format": "prettier --write .",
		"// === Testing - Core ===": "",
		"test": "vitest",
		"test:run": "vitest run",
		"test:watch": "vitest --watch",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"// === Testing - Suites ===": "",
		"test:critical": "vitest run test/grammar-checker.test.ts test/mdx.test.ts test/seo.test.ts",
		"test:integration": "vitest run test/links.test.ts test/accessibility.test.ts test/admin-interface.test.ts",
		"test:performance": "vitest run test/performance.test.ts",
		"test:back-to-top": "vitest run back-to-top",
		"// === Testing - Chrome AI ===": "",
		"ai:unit": "vitest run test/utils/summarizer.test.ts test/utils/translator.test.ts",
		"ai:integration": "vitest run test/integration/chrome-ai-components.test.ts",
		"ai:performance": "vitest run test/performance/chrome-ai-performance.test.ts",
		"ai:errors": "vitest run test/error-handling/chrome-ai-errors.test.ts",
		"ai:all": "npm run ai:unit && npm run ai:integration && npm run ai:performance && npm run ai:errors",
		"// === Testing - Features ===": "",
		"test:admin": "vitest run test/admin-interface.test.ts",
		"test:grammar": "vitest run test/grammar-checker.test.ts",
		"test:date": "vitest run test/date-filtering.test.ts",
		"// === Quality Checks ===": "",
		"spell": "cspell \"**/*.{ts,js,astro,tsx,jsx,md,mdx}\" --no-progress",
		"spell:check": "cspell \"src/**/*.{ts,js,astro,tsx,jsx}\" \"*.md\" --no-progress",
		"check": "npm run lint:all && npm run test:critical",
		"check:full": "npm run lint:all && npm run test:run",
		"check:commit": "tsx scripts/test-grammar.ts",
		"// === Utilities ===": "",
		"clean": "tsx scripts/test-clean.ts",
		"fast": "tsx scripts/test-fast.ts",
		"// === Database ===": "",
		"db:seed": "npx astro db execute db/seed.ts --remote",
		"db:studio": "astro db studio"
	},
	"dependencies": {
		"@astrojs/db": "^0.17.1",
		"@astrojs/mdx": "^4.3.4",
		"@astrojs/partytown": "^2.1.4",
		"@astrojs/react": "^4.3.0",
		"@astrojs/rss": "^4.0.12",
		"@astrojs/sitemap": "^3.5.0",
		"@astrojs/vercel": "^8.2.6",
		"@react-email/components": "0.3.2",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.11",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"astro": "^5.13.2",
		"astro-icon": "^1.1.5",
		"astro-seo": "^0.8.4",
		"formik": "^2.4.6",
		"framer-motion": "^12.23.7",
		"markdown-it": "^14.1.0",
		"react": "19.1.0",
		"react-dom": "19.1.0",
		"resend": "^4.7.0",
		"sanitize-html": "^2.17.0",
		"tailwindcss": "^4.1.11",
		"yup": "^1.6.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@eslint/js": "^9.31.0",
		"@iconify-json/ic": "^1.2.2",
		"@iconify-json/jam": "^1.2.3",
		"@iconify-json/mdi": "^1.2.3",
		"@iconify-json/meteocons": "^1.2.2",
		"@textlint/markdown-to-ast": "^15.2.1",
		"@types/jsdom": "^21.1.7",
		"@types/markdown-it": "^14.1.2",
		"@types/puppeteer": "^5.4.7",
		"@types/sanitize-html": "^2.16.0",
		"@typescript-eslint/eslint-plugin": "^8.39.0",
		"@typescript-eslint/parser": "^8.37.0",
		"commitlint-plugin-function-rules": "^4.0.2",
		"cspell": "^9.2.0",
		"eslint": "^9.31.0",
		"eslint-plugin-astro": "^1.3.1",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-mdx": "^3.6.2",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"globals": "^16.3.0",
		"gray-matter": "^4.0.3",
		"jsdom": "^26.1.0",
		"lighthouse": "^12.8.0",
		"lint-staged": "^16.1.4",
		"prettier": "3.6.2",
		"prettier-plugin-astro": "0.14.1",
		"prettier-plugin-tailwindcss": "0.6.14",
		"puppeteer": "^24.15.0",
		"react-email": "4.2.3",
		"textlint": "^15.2.1",
		"textlint-filter-rule-comments": "^1.2.2",
		"textlint-rule-alex": "^5.0.0",
		"textlint-rule-common-misspellings": "^1.0.1",
		"textlint-rule-en-capitalization": "^2.0.3",
		"textlint-rule-terminology": "^5.2.14",
		"textlint-rule-write-good": "^2.0.0",
		"tsx": "^4.20.3",
		"typescript-eslint": "^8.39.0",
		"vitest": "^3.2.4",
		"web-vitals": "^5.0.3"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,astro}": [
			"prettier --write",
			"eslint --fix",
			"cspell --no-progress"
		],
		"*.{md,mdx}": [
			"prettier --write",
			"textlint --fix",
			"cspell --no-progress"
		]
	}
}
