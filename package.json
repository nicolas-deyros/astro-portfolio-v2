{
	"name": "portfolio",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"dev": "astro dev --open",
		"dev:test": "astro dev --port 4321",
		"build": "astro build --remote",
		"preview": "astro preview",
		"astro": "astro",
		"lint": "eslint . --ext .js,.ts,.astro,.jsx,.tsx --fix",
		"lint:text": "textlint \"src/content/**/*.{md,mdx}\" \"README.md\" \"*.md\"",
		"lint:text:fix": "textlint --fix \"src/content/**/*.{md,mdx}\" \"README.md\" \"*.md\"",
		"lint:text:smart": "npm run lint:text:fix && npm run lint:text",
		"test": "vitest",
		"test:fast": "tsx scripts/test-fast.ts",
		"test:clean": "tsx scripts/test-clean.ts",
		"test:critical": "vitest run test/grammar-checker.test.ts test/mdx.test.ts test/seo.test.ts --run",
		"test:integration": "vitest run test/links.test.ts test/accessibility.test.ts test/admin-interface.test.ts --run",
		"test:back-to-top": "vitest run back-to-top",
		"test:back-to-top:isolated": "tsx scripts/test-clean.ts back-to-top-isolated",
		"test:performance": "vitest run performance",
		"test:performance:help": "tsx scripts/test-performance.ts",
		"test:grammar": "vitest run test/grammar-checker.test.ts",
		"test:admin": "vitest run test/admin-interface.test.ts",
		"test:date-filtering": "vitest run test/date-filtering.test.ts",
		"test:ui": "vitest run test/admin-interface.test.ts test/date-filtering.test.ts",
		"check:grammar": "npm run lint:text && echo \"âœ… Grammar check passed\"",
		"check:commit": "tsx scripts/test-grammar.ts",
		"check:all": "npm run lint && npm run lint:text:smart && npm run test",
		"fix:text": "npm run lint:text:fix"
	},
	"dependencies": {
		"@astrojs/db": "^0.15.1",
		"@astrojs/mdx": "^4.3.1",
		"@astrojs/partytown": "^2.1.4",
		"@astrojs/react": "^4.3.0",
		"@astrojs/rss": "^4.0.12",
		"@astrojs/sitemap": "^3.4.2",
		"@astrojs/vercel": "^8.2.3",
		"@react-email/components": "0.3.2",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.11",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"astro": "^5.12.5",
		"astro-icon": "^1.1.5",
		"astro-seo": "^0.8.4",
		"formik": "^2.4.6",
		"framer-motion": "^12.23.7",
		"markdown-it": "^14.1.0",
		"react": "19.1.0",
		"react-dom": "19.1.0",
		"resend": "^4.7.0",
		"sanitize-html": "^2.17.0",
		"tailwindcss": "^4.1.11",
		"yup": "^1.6.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@eslint/js": "^9.31.0",
		"@iconify-json/ic": "^1.2.2",
		"@iconify-json/jam": "^1.2.3",
		"@iconify-json/mdi": "^1.2.3",
		"@iconify-json/meteocons": "^1.2.2",
		"@textlint/markdown-to-ast": "^15.2.1",
		"@types/markdown-it": "^14.1.2",
		"@types/puppeteer": "^5.4.7",
		"@types/sanitize-html": "^2.16.0",
		"@typescript-eslint/eslint-plugin": "^8.39.0",
		"@typescript-eslint/parser": "^8.37.0",
		"commitlint-plugin-function-rules": "^4.0.2",
		"eslint": "^9.31.0",
		"eslint-plugin-astro": "^1.3.1",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-mdx": "^3.6.2",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"globals": "^16.3.0",
		"gray-matter": "^4.0.3",
		"lighthouse": "^12.8.0",
		"lint-staged": "^16.1.4",
		"prettier": "3.6.2",
		"prettier-plugin-astro": "0.14.1",
		"prettier-plugin-tailwindcss": "0.6.14",
		"puppeteer": "^24.15.0",
		"react-email": "4.2.3",
		"textlint": "^15.2.1",
		"textlint-filter-rule-comments": "^1.2.2",
		"textlint-rule-alex": "^5.0.0",
		"textlint-rule-common-misspellings": "^1.0.1",
		"textlint-rule-en-capitalization": "^2.0.3",
		"textlint-rule-terminology": "^5.2.14",
		"textlint-rule-write-good": "^2.0.0",
		"tsx": "^4.20.3",
		"typescript-eslint": "^8.39.0",
		"vitest": "^3.2.4",
		"web-vitals": "^5.0.3"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,astro}": [
			"prettier --write",
			"eslint --fix"
		],
		"*.{md,mdx}": [
			"prettier --write",
			"textlint --fix"
		]
	}
}
