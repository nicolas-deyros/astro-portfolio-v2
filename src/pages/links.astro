---
import Layout from '@layouts/index.astro'
export const prerender = true
import Section from '@components/Section.astro'
import linksData from '@/content/links.json'

const sortedLinks = linksData.sort(
	(a, b) => new Date(b.date).getTime() - new Date(a.date).getTime(),
)
---

<Layout
	title={'Latest Social Links'}
	description="List of social links and interactions."
	noindex={false}
	nofollow={false}>
	<Section ariaLabel="Latest Social Links">
		<h3
			class="my-3 w-full text-center text-xl font-bold text-slate-800 dark:text-slate-200">
			Latest Social Links
		</h3>

		<div class="mt-3 flex w-full flex-col items-center gap-4">
			{
				sortedLinks.map((l, i) => (
					<article
						class="article-animate flex w-full max-w-xl items-center gap-2 border-b-2 border-slate-200 p-1 dark:border-slate-700"
						style={`animation-delay: ${i * 500}ms`}>
						<h4 class="mb-1 text-lg font-bold text-slate-900 dark:text-slate-100">
							<a
								href={`https://${l.url}`}
								target="_blank"
								class="transition-colors hover:text-blue-600 hover:underline dark:hover:text-blue-400">
								{l.title}
							</a>
						</h4>
						<span class="text-slate-600 dark:text-slate-400"> - </span>
						<time
							class="text-xs text-slate-500 dark:text-slate-400"
							datetime={new Date(l.date).toISOString()}>
							{new Date(l.date).toLocaleDateString('en-us', {
								year: '2-digit',
								month: 'short',
								day: 'numeric',
							})}
						</time>
					</article>
				))
			}
		</div>
	</Section>

	<style>
		@keyframes fadeInUp {
			from {
				opacity: 0;
				transform: translateY(30px);
			}
			to {
				opacity: 1;
				transform: translateY(0);
			}
		}
		.article-animate {
			opacity: 0;
			animation: fadeInUp 0.6s forwards;
		}
	</style>
</Layout>
