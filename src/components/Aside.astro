---
interface Props {
	type: 'info' | 'success' | 'question' | 'danger'
	title?: string
}

const { type, title } = Astro.props

const baseClasses = 'border-l-4 p-4 my-4'
const typeClasses = {
	info: 'bg-blue-100 border-blue-500 text-blue-800 dark:bg-gray-800 dark:border-blue-400 dark:text-blue-300',
	success:
		'bg-green-100 border-green-500 text-green-800 dark:bg-gray-800 dark:border-green-400 dark:text-green-300',
	question:
		'bg-yellow-100 border-yellow-500 text-yellow-800 dark:bg-gray-800 dark:border-yellow-400 dark:text-yellow-300',
	danger:
		'bg-red-100 border-red-500 text-red-800 dark:bg-gray-800 dark:border-red-400 dark:text-red-300',
}

const classes = `${baseClasses} ${typeClasses[type]}`
---

<aside class={classes} role="alert">
	{title && <h4 class="mb-2 font-bold">{title}</h4>}
	<div
		class="prose prose-sm dark:prose-p:text-slate-300 dark:prose-strong:text-current max-w-none">
		<slot />
	</div>
</aside>
