---
import { SEO } from 'astro-seo'

interface Props {
	title: string
	description: string
	noindex?: boolean
	nofollow?: boolean
	ogImage?: string
}
const { title, description, noindex = false, nofollow = false, ogImage } = Astro.props
const canonicalURL = new URL(Astro.url.pathname, Astro.site)

const dynamicOgImageUrl = new URL(
	`/api/og.png?title=${encodeURIComponent(title)}&desc=${encodeURIComponent(description)}`,
	Astro.site || 'https://www.nicolasdeyros.dev'
).toString()
---

<head>
	<!-- Theme initialization script - runs before page render to prevent flash -->

	<!-- Google Analytics with Partytown - Production only -->
	{
		Astro.url.hostname !== 'localhost' && (
			<>
				<script
					type="text/partytown"
					src="https://www.googletagmanager.com/gtag/js?id=G-SW4ZXZJ9WH"
				></script>
				<script type="text/partytown">
					/* eslint-disable @typescript-eslint/explicit-function-return-type, prefer-rest-params */
					window.dataLayer = window.dataLayer || [];
					function gtag() {
						dataLayer.push(arguments);
					}
					gtag('js', new Date());
					gtag('config', 'G-SW4ZXZJ9WH');
					/* eslint-enable @typescript-eslint/explicit-function-return-type, prefer-rest-params */
				</script>
			</>
		)
	}

	<meta charset="utf-8" />
	<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
	<meta name="viewport" content="width=device-width" />
	<meta name="author" content="Nicolás Deyros" />
	<link rel="sitemap" href="/sitemap-index.xml" />
	<meta http-equiv="Permissions-Policy" content="compute-pressure=()" />
	<SEO
		title={`Nicolás Deyros | ${title}`}
		description={description}
		noindex={noindex}
		nofollow={nofollow}
		canonical={canonicalURL.toString()}
		openGraph={{
			basic: {
				title: `Nicolás Deyros | ${title}`,
				type: 'website',
				image: ogImage || dynamicOgImageUrl,
			},
			optional: {
				description: description,
				siteName: 'Nicolás Deyros Portfolio',
			},
		}}
		twitter={{
			card: 'summary_large_image',
			site: '@ndeyros',
			creator: '@ndeyros',
			title: `Nicolás Deyros | ${title}`,
			description: description,
			image: 'https://www.nicolasdeyros.dev/favicon.svg',
		}}
	/>
</head>
