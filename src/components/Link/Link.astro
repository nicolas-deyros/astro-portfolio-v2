---
import { Icon } from 'astro-icon/components'
import type { HTMLAttributes } from 'astro/types'
interface Props extends HTMLAttributes<'a'> {
	text?: string
	href: string
	rel?: 'prefetch' | 'nofollow prefetch'
	icon?: string
	target?: '_self' | '_blank'
	title?: string
	className?: string
}

const {
	text,
	href,
	rel = 'prefetch',
	icon,
	target = '_self',
	title,
	class: className,
	...props
} = Astro.props
---

<a
	href={href}
	rel={rel}
	title={title}
	target={target}
	class={className}
	{...props}>
	{icon ? <Icon name={icon} class="h-5" /> : null}
	{text ? <span>{text}</span> : null}
	{Astro.slots.default}
</a>
