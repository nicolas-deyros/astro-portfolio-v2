---
import '@styles/global.css'
import Head from '@components/Head.astro'
import Header from '@components/Header/Header.astro'
import Footer from '@components/Footer.astro'
const { title, description, noindex, nofollow } = Astro.props
const { isBlog } = Astro.props
---

<html lang="en">
	<Head {title} {description} {noindex} {nofollow} />
	<body
		class={`flex flex-col bg-white dark:bg-gray-900 text-black dark:text-white font-sans ${isBlog ? 'h-max' : 'h-max md:h-screen'}`}>
		<Header />
		<main class="container mx-auto my-20 h-full w-full flex-grow px-5 md:px-10">
			<slot />
		</main>
		<Footer />
	</body>
</html>
